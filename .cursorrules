{
    "python": {
        "formatter": "black",
        "formatterArgs": ["--line-length", "100"],
        "linter": "flake8",
        "linterArgs": [
            "--max-line-length=100",
            "--extend-ignore=E203",
            "--exclude=venv/*,__pycache__/*,.pytest_cache/*"
        ],
        "organizeImports": true,
        "organizeImportsArgs": ["--profile", "black"],
        "typeChecker": "mypy",
        "typeCheckerArgs": [
            "--ignore-missing-imports",
            "--disallow-untyped-defs",
            "--disallow-incomplete-defs",
            "--check-untyped-defs",
            "--disallow-untyped-decorators",
            "--no-implicit-optional",
            "--warn-redundant-casts",
            "--warn-unused-ignores",
            "--warn-return-any",
            "--strict-optional",
            "--strict-equality"
        ]
    },
    "yaml": {
        "formatter": "prettier",
        "formatterArgs": ["--parser", "yaml"]
    },
    "markdown": {
        "formatter": "prettier",
        "formatterArgs": ["--parser", "markdown", "--prose-wrap", "always"]
    },
    "json": {
        "formatter": "prettier",
        "formatterArgs": ["--parser", "json"]
    },
    "ignore": [
        "venv/**/*",
        "__pycache__/**/*",
        ".pytest_cache/**/*",
        "*.pyc",
        "*.pyo",
        "*.pyd",
        ".Python",
        "build/**/*",
        "develop-eggs/**/*",
        "dist/**/*",
        "downloads/**/*",
        "eggs/**/*",
        ".eggs/**/*",
        "lib/**/*",
        "lib64/**/*",
        "parts/**/*",
        "sdist/**/*",
        "var/**/*",
        "wheels/**/*",
        "share/python-wheels/**/*",
        "*.egg-info/**/*",
        ".installed.cfg",
        "*.egg",
        "MANIFEST",
        ".env",
        ".venv",
        "env/**/*",
        "ENV/**/*",
        ".coverage",
        ".coverage.*",
        ".cache",
        "coverage.xml",
        "*.cover",
        "*.py,cover",
        ".hypothesis/**/*",
        ".pytest_cache/**/*",
        "htmlcov/**/*",
        "docs/_build/**/*",
        ".tox/**/*",
        ".nox/**/*",
        ".mypy_cache/**/*",
        ".dmypy.json",
        "dmypy.json",
        ".pyre/**/*",
        ".pytype/**/*",
        "cython_debug/**/*"
    ],
    "rules": {
        "python": {
            "maxLineLength": 100,
            "quoteMark": "double",
            "indentSize": 4,
            "newlineAtEndOfFile": true,
            "trailingComma": true,
            "sortImports": true,
            "removeUnusedImports": true
        },
        "yaml": {
            "maxLineLength": 100,
            "quoteMark": "double",
            "indentSize": 2
        },
        "markdown": {
            "maxLineLength": 100,
            "trailingPunctuation": true
        },
        "json": {
            "indentSize": 2,
            "sortKeys": true
        }
    }
} 