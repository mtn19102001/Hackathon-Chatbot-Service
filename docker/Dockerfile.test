FROM python:3.11-slim

WORKDIR /app

# Copy test files and requirements
COPY test_services.py .
COPY test-requirements.txt .

# Install dependencies
RUN pip install -r test-requirements.txt

# Add wait-for-it script to wait for services
ADD https://raw.githubusercontent.com/vishnubob/wait-for-it/master/wait-for-it.sh /wait-for-it.sh
RUN chmod +x /wait-for-it.sh

# Command to run tests
CMD ["/wait-for-it.sh", "db:5432", "--", "/wait-for-it.sh", "chatbot:8000", "--", "/wait-for-it.sh", "context:8001", "--", "pytest", "test_services.py", "-v"] 